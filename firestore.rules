rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // User profile and all subcollections (mealPlans, foodLogs, etc.)
    match /users/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Community posts — any authenticated user can read/write
    match /communityPosts/{postId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update: if request.auth != null;
      allow delete: if request.auth != null && request.auth.uid == resource.data.authorUid;
    }

    // Shared meal plans — any authenticated user can read, only author can write
    match /sharedPlans/{planId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
  }
}
